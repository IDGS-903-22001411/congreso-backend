{
  "openapi": "3.0.4",
  "info": {
    "title": "CongresoAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/listado": {
      "get": {
        "tags": [
          "Participantes"
        ],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/participante/{id}": {
      "get": {
        "tags": [
          "Participantes"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/registro": {
      "post": {
        "tags": [
          "Participantes"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearParticipanteDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearParticipanteDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CrearParticipanteDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CrearParticipanteDto": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "apellidos": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "twitter": {
            "type": "string",
            "nullable": true
          },
          "ocupacion": {
            "type": "string",
            "nullable": true
          },
          "avatar": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}